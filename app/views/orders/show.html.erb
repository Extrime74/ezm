<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @order %>

    <%= link_to "Редактировать", edit_order_path(@order), class: "hover:bg-blue-200 cursor-pointer mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Назад", "javascript:void(0);", class: "hover:bg-blue-200 cursor-pointer ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", onclick: "window.history.back();" %>

    <div class="inline-block ml-2">
      <%= button_to "Удалить", @order, method: :delete, class: "hover:bg-red-400 cursor-pointer mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
