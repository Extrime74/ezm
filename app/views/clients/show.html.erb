<div class="mx-auto md:w-2/3 w-full flex flex-col items-center">
  <div class="text-center mb-5">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  </div>

  <div class="items-center" style="margin-right: 200px;">
    <%= render @client %>
  </div>

  <div class="flex flex-col md:flex-row mt-4">
    <%= link_to "Редактировать", edit_client_path(@client), class: "mt-2 rounded-lg py-3 px-4 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Назад", "javascript:void(0);", class: "mt-2 md:ml-2 rounded-lg py-3 px-4 bg-gray-100 inline-block font-medium", onclick: "window.history.back();" %>
    <div class="inline-block md:ml-2">
      <%= button_to "Удалить", @client, method: :delete, class: "mt-2 rounded-lg py-3 px-4 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
